          <article class="mb-8">
            <header class="mb-1">
              {%- if p.categories is defined -%}
              <div class="uppercase text-sm"><a href="/categories/{{ p.categories[0] }}">{{ p.categories[0] }}</a></div>
              {%- endif -%}
              <h2 class="text-2xl text-purple-700 flex items-center">
                {%- if page.type != 'page' -%}
                <a href="{{ url(p) }}#autoplay" class="mr-2 hover:text-slate-600"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewbox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/></svg></a>
                <a href="{{ url(p) }}">{{ p.episode.number }}: {{ p.title }}</a>
                {%- else -%}
                {{ p.episode.number }}: {{ p.title }}
                {%- endif -%}
              </h2>
              <time class="text-xs text-slate-400">{{ p.date|date('l j F Y') }}</time>
            </header>
            <div class="mb-6">
              <div class="markdown dark:markdown-invert">
                {{ p.content|excerpt_html }}
              </div>
              {%- if page.type == 'page' -%}
              {%~ include 'partials/audioplayer.html.twig' with {page: p} ~%}
              <div class="markdown dark:markdown-invert">
                {{ p.content|excerpt_html({capture: 'after'}) }}
              </div>
              {%- endif -%}
            </div>
            {%- if page.type != 'page' -%}
            <a href="{{ url(p) }}" class="p-3 bg-purple-700 text-purple-100 rounded-lg hover:bg-purple-900">View player and notes</a>
            {%- endif -%}
          </article>